<launch>
  <arg name="map" default="$(find autolabor_teleop)/map/20190429/map.yaml"/>
  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map)"/>

  <!--- Run AMCL -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find autolabor_pro1_driver)/yaml/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find autolabor_pro1_driver)/yaml/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find autolabor_pro1_driver)/yaml/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find autolabor_pro1_driver)/yaml/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find autolabor_pro1_driver)/yaml/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find autolabor_pro1_driver)/yaml/nav_obstacles_params.yaml" command="load" />
  </node>
  
  <!-- acml -->
  <include file="$(find autolabor_teleop)/launch/autolabor_amcl.launch"/>
 
</launch>
